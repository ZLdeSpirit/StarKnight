<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/titleRl"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backIv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/sk_ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sk_speed_test_result"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/speedTestFl"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleRl">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/sk_ic_speed_test_circle"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/centerSpeedTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                tools:text="248"
                android:layout_marginTop="24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="Mbps"
                />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/speedTestLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/speedTestFl"
        >

        <!-- download -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp">

            <ImageView
                android:id="@+id/downloadIv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/sk_ic_download"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/downloadIv">

                <TextView
                    android:id="@+id/downloadTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sk_download"
                    android:textColor="@color/sk_t_00FF6C"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/downloadSpeedTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="--Mbps" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- upload -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="70dp">

            <ImageView
                android:id="@+id/uploadIv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/sk_ic_upload"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/uploadIv">

                <TextView
                    android:id="@+id/uploadTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sk_upload"
                    android:textColor="@color/sk_t_00FF6C"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/uploadSpeedTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="--Mbps" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adTimeLl"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="42dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/sk_button_type_1"
        app:layout_constraintTop_toBottomOf="@id/speedTestLl">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/sk_ic_ad_1"
            android:layout_marginStart="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/downloadIv">

            <TextView
                android:id="@+id/adTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+20 mins"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/adDescTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="@string/sk_ad_desc" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectLl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="37dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/sk_main_select_bg"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/adTimeLl">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/selectServerFlagIv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="6dp"
            app:shapeAppearance="@style/sk_round_16"
            android:src="@drawable/sk_ic_select_default" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selectCountryTv"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="@string/sk_select_the_route" />

        </LinearLayout>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/sk_ic_down_arrow" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>