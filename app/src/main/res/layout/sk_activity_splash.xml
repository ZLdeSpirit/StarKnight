<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <FrameLayout
        android:id="@+id/earthFl"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp">

        <ImageView
            android:id="@+id/earthIv"
            android:layout_width="match_parent"
            android:layout_height="397dp"
            android:src="@drawable/sk_ic_splash_earth"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:text="@string/sk_app_name"
            android:layout_gravity="center_horizontal|bottom"
            android:textStyle="bold"
            />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/sk_splash_desc"
        android:layout_marginTop="24dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/earthFl"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="62dp"
        android:layout_height="40dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="sk_splash_loading.json"
        app:lottie_loop="true"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>