<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/titleLl"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="314dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/sk_app_name"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/mainCateIv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="gone"
            android:src="@drawable/sk_ic_main_cate" />

        <ImageView
            android:id="@+id/mainSettingsIv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/sk_ic_main_settings" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectLl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="37dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/sk_main_select_bg"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/titleLl">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/selectServerFlagIv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="6dp"
            app:shapeAppearance="@style/sk_round_16"
            android:src="@drawable/sk_ic_select_default" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selectCountryTv"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="@string/sk_select_the_route" />

            <TextView
                android:id="@+id/connectTimeTv"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="end"
                tools:text="00:00:00" />

        </LinearLayout>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/sk_ic_down_arrow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/indicatorLl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectLl">

        <View
            android:id="@+id/stateDotView"
            android:layout_width="4dp"
            android:layout_height="4dp"
            tools:background="@drawable/sk_dot_disconnected_state" />

        <TextView
            android:id="@+id/stateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="@string/sk_disconnected" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/connectFl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/indicatorLl">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/connectingLav"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="sk_connecting.json"
            app:lottie_loop="true"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/noConnectingLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/noConnectIv"
                android:layout_width="140dp"
                android:layout_height="140dp"
                tools:src="@drawable/sk_ic_disconnected" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <!-- download -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="42dp">

                    <ImageView
                        android:id="@+id/downloadIv"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/sk_ic_download"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/downloadIv">

                        <TextView
                            android:id="@+id/downloadTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sk_download"
                            android:textColor="@color/sk_t_00FF6C"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/downloadSpeedTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            tools:text="--Mbps" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- upload -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="70dp">

                    <ImageView
                        android:id="@+id/uploadIv"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/sk_ic_upload"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/uploadIv">

                        <TextView
                            android:id="@+id/uploadTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sk_upload"
                            android:textColor="@color/sk_t_00FF6C"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/uploadSpeedTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            tools:text="--Mbps" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/adTimeLl"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:background="@drawable/sk_button_type_1"
        app:layout_constraintTop_toBottomOf="@id/connectFl">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/sk_ic_ad_1"
            android:layout_marginStart="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/downloadIv">

            <TextView
                android:id="@+id/adTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+20 mins"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/adDescTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="@string/sk_ad_desc" />
        </LinearLayout>


    </LinearLayout>

    <com.s.k.starknight.ad.display.NativeAdViewWrapper
        android:id="@+id/nativeAdWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>