<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="357dp"
        android:background="@drawable/sk_ic_add_time_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/dialogCloseIv"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:src="@drawable/sk_ic_add_time_tip"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#121413"
            android:text="@string/sk_add_connection_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#434744"
            android:text="@string/sk_add_connection_time_desc"/>

        <TextView
            android:id="@+id/remainTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#4C60E3"
            android:textStyle="bold"
            tools:text="00:09:59"/>

        <LinearLayout
            android:id="@+id/adBtn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/sk_button_type_2">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/sk_ic_ad_2"/>
            <TextView
                android:id="@+id/adTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+20 mins"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>
    
    <Space
        android:layout_width="1px"
        android:layout_height="24dp"/>

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/sk_ic_close_1"
        android:layout_gravity="center_horizontal"
        />



</LinearLayout>