<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SK_Theme.StarKnight" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/sk_page_color</item>
        <item name="android:windowBackground">@color/sk_page_color</item>
        <item name="android:navigationBarColor">@color/sk_page_color</item>
    </style>

    <style name="SK_DialogTheme">
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowFrame">@android:color/transparent</item><!-- 边框 -->
        <item name="android:windowMinWidthMinor">50%</item>
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 自己想要的背景 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
    </style>

    <style name="sk_round_12" parent="">
        <item name="cornerSize">12dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>